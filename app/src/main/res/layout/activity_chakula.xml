<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chakula">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/app_bar_layout">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="15dp">
        <Button
            android:onClick="openAinaYaVyakulaVyaKukuVideo"
            app:fontFamily="serif"
            android:text="AINA ZA VYAKULA VYA KUKU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:layout_marginBottom="17dp"/>

        <Button
            android:onClick="openFaidaYaChakulaVyaKukuVideo"
            app:fontFamily="serif"
            android:text="FAIDA ZA VYAKULA VYA KUKU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:layout_marginBottom="17dp"/>

        <Button
            android:onClick="openKupimaVideo"
            app:fontFamily="serif"
            android:text="KUPIMA NA KUCHANGANYA CHAKULA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"/>
    </LinearLayout>


</LinearLayout>